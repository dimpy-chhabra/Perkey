<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.dimpy.perkey_dos.occu_check_frag">

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/adressTextView"
        android:layout_height="wrap_content"
        android:text="Here shall be the adress of the parking slot"
        style="@style/textViewLarge" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Here shall be the adress of the parking slot"
        style="@style/textViewMedium" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="fare formula description"
        style="@style/textViewLarge" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Entry time : "
        style="@style/textViewMedium" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Park it!"
        style="@style/textViewLarge"
        android:background="@drawable/ripple_effect"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:textSize="40sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:fontFamily="monospace"
        style="@style/textViewLarge"
        android:background="@drawable/ripple_effect"
        android:textColor="@color/colorAccent" />


</LinearLayout>
