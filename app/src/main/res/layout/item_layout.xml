<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="110sp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:orientation="horizontal"
        android:padding="6sp">


        <!--<ImageView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:layout_marginTop="6sp"
            android:layout_marginLeft="16sp"
            android:scaleType="centerCrop"
            android:src="@drawable/iconp" /> -->
        <TextView
            android:id="@+id/shape_money"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_marginLeft="16sp"
            android:layout_marginTop="6sp"
            android:background="@drawable/price_circle"
            android:gravity="center"
            android:scaleType="fitStart"
            android:text="Rs.34"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textColor="@color/colorWhite"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="100sp"
            android:layout_gravity="right"
            android:layout_marginLeft="6sp"
            android:layout_weight="0.75"
            android:orientation="vertical"
            android:paddingRight="16sp">

            <TextView
                android:id="@+id/textView_Mall"
                style="@style/textViewLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.40"
                android:text="Ambience Mall"
                android:textAlignment="textEnd"
                android:textColor="@color/colorPrimaryText"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_Adress"
                style="@style/textViewMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:text="Gurgaon, NCR, Delhi, India"
                android:textAlignment="textEnd"
                android:textColor="@color/colorSecondaryText"
                android:textStyle="italic" />


            <TextView
                android:id="@+id/textView_Duration"
                style="@style/textViewMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:text="2 Hours"
                android:textAlignment="textEnd"
                android:textColor="@color/colorSecondaryText" />

            <!--<TextView
                android:id="@+id/textView_Cost"
                style="@style/textViewMedium"
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="0.25"
                android:padding="3sp"
                android:text="Rs. 70"
                android:textAlignment="textEnd"
                android:textColor="@color/colorSecondaryText" />-->

        </LinearLayout>


    </LinearLayout>

    <include layout="@layout/item_divider" />
</LinearLayout>
